{
  "manifest_version": 2,

  "name": "Talk to Youtube",
  "description": "Now you can record your speech when watching YouTube",
  "version": "1.0",
	
  "content_scripts": [ {
     "all_frames": true,
		 "css": ["animate.css", "toy.css"],
     "js": [ "jquery.js", "jquery.lettering.js", "jquery.textillate.js", "toy.js" ],
     "matches": [ "https://apis.google.com/*", "https://plus.googleapis.com/*", "https://www.youtube.com/*" ],
     "run_at": "document_end"
  } ]
}